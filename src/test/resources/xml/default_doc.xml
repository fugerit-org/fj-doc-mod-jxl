<?xml version="1.0" encoding="utf-8"?>
<doc
	xmlns="http://javacoredoc.fugerit.org"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://javacoredoc.fugerit.org https://www.fugerit.org/data/java/doc/xsd/doc-2-1.xsd" > 

  <metadata>
  	<!-- Margin for document : left;right;top;bottom -->
  	<info name="margins">10;10;10;30</info>  
  	<info name="excel-table-id">excel-table=print</info>
 	<!-- documenta meta information -->
	<info name="doc-title">Basic example</info>
	<info name="doc-subject">fj doc venus sample source xml</info>
	<info name="doc-author">fugerit79</info>
	<info name="doc-language">en</info>
	<!-- template -->
	<!-- 
	<info name="excel-template">src/test/resources/template/default_template.xls</info>
	 -->
	<footer-ext>
		<para align="right">${r"${currentPage}"} / ${r"${pageCount}"}</para>
	</footer-ext>
  </metadata>
  <body>
  		<para>My sample title</para>
    	<table columns="3" colwidths="30;30;40"  width="100" id="excel-table" padding="2">
    		<row>
    			<cell border-width-right="6" align="center" border-color="#000000" border-width="1"><para style="bold">Name</para></cell>
    			<cell border-width-top="0" align="center"><para style="bold">Surname</para></cell>
    			<cell border-width-left="1" align="center"><para style="bold">Title</para></cell>
    		</row>
       		<row>
    			<cell valign="bottom" back-color="#DDFFDD"><para ><![CDATA[Luthien]]></para></cell>
    			<cell valign="middle"><para style="underline"><![CDATA[Tinuviel]]></para></cell>
    			<cell valign="top"><para><![CDATA[Queen]]></para></cell>
    		</row>
       		<row>
    			<cell align="right"><para style="bold"><![CDATA[Thorin]]></para></cell>
    			<cell align="left"><para style="italic"><![CDATA[Oakshield]]></para></cell>
    			<cell border-width-left="4"><para style="bolditalic"><![CDATA[King]]></para></cell>
    		</row>     	
       		<row>
    			<cell><para type="number" format="float"><![CDATA[1.1]]></para></cell>
    			<cell><para type="number" format="[$$-409]"><![CDATA[1.2]]></para></cell>
    			<cell><para type="number" format="float"><![CDATA[1.3]]></para></cell>
    		</row>
       		<row>
    			<cell><phrase><![CDATA[test phrase 1]]></phrase></cell>
    			<cell><phrase><![CDATA[test phrase 2]]></phrase></cell>
    			<cell><image/></cell>
    		</row>        	
       		<row>
    			<cell colspan="3"><phrase><![CDATA[Colspan = 3]]></phrase></cell>
    		</row>
       		<row>
    			<cell colspan="1"><phrase><![CDATA[Colspan = 1]]></phrase></cell>
    			<cell colspan="2"><phrase><![CDATA[Colspan = 2]]></phrase></cell>
    		</row>        		
       		<row>
    			<cell colspan="2" fore-color="#000099"><phrase><![CDATA[Colspan = 2]]></phrase></cell>       		
    			<cell colspan="1"><phrase><![CDATA[Colspan = 1]]></phrase></cell>
    		</row>        		    		       			    		        		
    	</table>
  </body>
  
</doc>